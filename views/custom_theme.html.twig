{% block form_errors %}
	{% if errors|length > 0 %}

		{% for error in errors %}
			<span class="error">{{ error.message }}</span>
		{% endfor %}

	{% endif %}
{% endblock form_errors %}


{% block form_row %}
	{% set widget_attr = {} %}
	{% if help is not empty %}
		{% set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
	{% endif -%}
	<div {% with {attr: row_attr} %} {{ block('attributes') }} {% endwith %}>
		{{- form_label(form) -}}
		{{- form_widget(form, widget_attr) -}}
		{{- form_help(form) -}}
		{{- form_errors(form) -}}
	</div>
{% endblock form_row %}
